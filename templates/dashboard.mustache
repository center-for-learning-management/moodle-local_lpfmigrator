<div class="local_lpfmigrator dashboard">
    {{> local_lpfmigrator/mainmenu}}
    <div class="stages-wrapper" style="width: 100%; height: 600px; overflow-y: hidden; overflow-x: auto;">
        <div style="width: 1520px;">
        {{#stages}}
            <div class="stage stage-{{value}}" style="display: inline-block; width: 250px; height: 600px;overflow-y: auto; border: 2px solid black; border-radius: 10px;">
                <div class="stagelabel" style="text-align: center; font-weight: bold; border-bottom: 1px solid black;">{{label}}</div>
                <div>
                    <table class="generaltable">
                    {{#instances}}
                        <tr>
                            <th style="text-align: center;">
                                <a href="{{wwwroot}}/local/lpfmigrator/details.php?id={{id}}">
                                    {{instancename}}
                                </a><br />
                                {{^lpfgroup}}?{{/lpfgroup}}{{lpfgroup}} | {{orgid}}
                            </th>
                        </tr>
                    {{/instances}}
                    </table>
                </div>
            </div>
        {{/stages}}
        </div>
    </div>
</div>

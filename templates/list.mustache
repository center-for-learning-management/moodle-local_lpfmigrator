<div class="local_lpfmigrator list">
    {{> local_lpfmigrator/mainmenu}}
    <center>
    {{#presets}}
        <a href="{{wwwroot}}/local/lpfmigrator/list.php?preset={{id}}" class="btn {{#active}} btn-primary {{/active}}{{^active}} btn-secondary {{/active}}">
            {{label}}
        </a>
    {{/presets}}
    </center>
    <table class="generaltable">
        <thead>
            <tr>
                <th>{{#str}} stage, local_lpfmigrator {{/str}} </th>
                <th>{{#str}} name {{/str}}</th>
                <th>{{#str}} group {{/str}}</th>
                <th>{{#str}} orgid, local_lpfmigrator {{/str}}</th>
                <th>{{#str}} path_data, local_lpfmigrator {{/str}}</th>
                <th>{{#str}} datasize, local_lpfmigrator {{/str}}</th>
                <th>{{#str}} backupsize, local_lpfmigrator {{/str}}</th>
                <th>{{#str}} action {{/str}}</th>
                <th>eduvidual</th>
            </tr>
        </thead>
        <tbody>
            {{#instances}}
                <tr>
                    <td>{{stage}} {{stagelabel}}</td>
                    <td>{{instancename}}</td>
                    <td>{{lpfgroup}}</td>
                    <td>{{orgid}}</td>
                    <td>{{path_data}}</td>
                    <td>{{datasize_hr}}</td>
                    <td>{{backupsize_hr}}</td>
                    <td>
                        <a href="{{wwwroot}}/local/lpfmigrator/details.php?id={{id}}" name="{{instancename}}">
                            {{#str}} details, local_lpfmigrator {{/str}}
                        </a>
                    </td>
                    <td>
                        {{#categoryid}}
                            <a href="{{wwwroot}}/course/index.php?categoryid={{categoryid}}" target="_blank">{{#str}} category {{/str}}</a>
                        {{/categoryid}}
                    </td>
                </tr>
            {{/instances}}
        </tbody>
    </table>
</div>
